@model basics.Models.Computer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Computer Details</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">Computer App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/computer/list">Computers</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="~/img/@(string.IsNullOrEmpty(Model.Image) ? "placeholder.png" : Model.Image)" class="img-fluid rounded-start" alt="@Model.Title" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title">@Model.Title</h2>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text"><small class="text-muted">ID: @Model.Id</small></p>
                        <a href="/computer/list" class="btn btn-outline-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
